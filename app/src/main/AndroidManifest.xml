<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.loopslab.wordbywordquran"
    >

    <application
        android:name=".App"
        android:allowBackup="true"
        android:configChanges="keyboardHidden|orientation|screenSize"
        android:fullBackupContent="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme.Mushaf" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ayah.ayahword.AyahWordActivity"
            android:parentActivityName=".MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.loopslab.wordbywordquran.MainActivity" />
        </activity>
        <activity
            android:name=".various.settings.SettingsActivity"
            android:label="@string/title_activity_settings"
            android:parentActivityName=".MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.loopslab.wordbywordquran.MainActivity" />
        </activity>
        <activity
            android:name=".various.AboutActivity"
            android:label="@string/title_about"
            android:parentActivityName=".MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.loopslab.wordbywordquran.MainActivity" />
        </activity>
        <activity
            android:name=".ayah.tafsir.TafsirActivity"
            android:parentActivityName=".ayah.ayahword.AyahWordActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".ayah.ayahword.AyahWordActivity" />
        </activity>
    </application>

</manifest>
